<% content_for :header do %>
  <section class="hero is-warning">
    <div class="hero-body">
      <div class="container">
        <h1 class="titel">
          Browse the latest Books in BookShop
        </h1>
      </div>
    </div>
  </section>
  <% end %>
  
  <div class="book-index-grid pt4">
    <% @books.each do |book| %>
  
      <div class="book border-light">
        <div class="book-thumb">
        <%= link_to image_tag(book.image_url(:thumb)), book %>
        <% if book.condition? %>
          <div class="condition">
            <span class="tag is-dark"><%= book.condition %></span>
          </div>
        <% end %>
        </div>
  
  
      <div class="pa3">
  
        <h3 class="fw7 f4 titel"><%= link_to book.titel, book %></h3>
  
        <p class="has-text-gray fg pt1">Sold by <%= book.user.name %></p>
  
        <p class="f3 fw6 has-text-right pt2 price"><%= number_to_currency(book.price) %></p>
      
       
        <% if book_author(book) %>
      <%= link_to 'Edit', edit_book_path(book), class: 'button' %>
           <%= button_to 'Delete', book, method: :delete, data: { confirm: "Are you sure ?" }, class: "button is-small" %>
        <% end %>
  
      </div>
    </div>
    <% end %>
  </div>
